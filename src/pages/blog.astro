---
import BaseLayout from '../layouts/BaseLayout.astro';

// Import all markdown files from blog folder
const postImportResult = import.meta.glob('../content/blog/*.md', { eager: true });

// Convert the imports into an array of posts
const posts = Object.values(postImportResult).map((mod: any) => ({
  url: '/blog/' + mod.file.replace('../content/blog/', '').replace('.md', ''),
  ...mod.frontmatter,
}));

// Sort posts by date, descending
posts.sort((a, b) => new Date(b.date).valueOf() - new Date(a.date).valueOf());
---

<BaseLayout>
  <section class="max-w-4xl mx-auto p-4">
    <h1 class="text-3xl font-bold mb-6">Blog</h1>
    <ul class="space-y-4">
      {posts.map((post) => (
        <li>
          <a href={post.url} class="text-blue-500 hover:underline">
            {post.title}
          </a>
          <p class="text-sm text-gray-600">{post.description}</p>
          <p class="text-xs text-gray-400">{post.date}</p>
        </li>
      ))}
    </ul>
  </section>
</BaseLayout>