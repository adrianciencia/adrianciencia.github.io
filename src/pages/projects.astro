---
import BaseLayout from '../layouts/BaseLayout.astro';
import Card from '../components/Card.astro';

const projects = [
  {
    title: 'Mindari',
    description: 'Democratizing therapy with AI-based matching.',
    link: 'https://example.com/mindari',
    image: '/assets/images/mindari.jpg',
  },
  {
    title: 'Der√≠vate',
    description: 'Building community for Peruvian physics students.',
    link: 'https://example.com/derivate',
    image: '/assets/images/derivate.jpg',
  },
];
---

<BaseLayout>
  <section class="max-w-4xl mx-auto p-4">
    <h2 class="text-2xl font-semibold mb-4">My Projects</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      {projects.map((proj) => (
        <Card 
          title={proj.title} 
          description={proj.description} 
          link={proj.link}
          image={proj.image}
        />
      ))}
    </div>
  </section>
</BaseLayout>