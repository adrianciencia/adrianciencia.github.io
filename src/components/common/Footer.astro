---
const currentYear = new Date().getFullYear();

// Footer navigation links
const footerLinks = [
  { heading: 'About', links: [
    { label: 'About Me', url: '/about' },
    { label: 'Research', url: '/research' },
    { label: 'Projects', url: '/projects' }
  ]},
  { heading: 'Connect', links: [
    { label: 'Contact', url: '/contact' },
    { label: 'GitHub', url: 'https://github.com/adrianciencia' },
    { label: 'Twitter', url: 'https://twitter.com/adrianciencia' }
  ]},
  { heading: 'Resources', links: [
    { label: 'Blog', url: '/blog' },
    { label: 'Photography', url: '/photography' },
    { label: 'Publications', url: '/research' }
  ]}
];
---

<footer class="border-t border-gray-100 dark:border-gray-900 mt-16 pt-16 pb-12 text-[var(--apple-gray-600)] dark:text-[var(--apple-gray-400)] backdrop-blur-sm">
  <div class="max-w-7xl mx-auto px-6 md:px-8">
    <!-- Footer grid -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-10 mb-16">
      <!-- Logo and tagline -->
      <div class="col-span-2 md:col-span-1">
        <div class="font-semibold text-xl tracking-tight text-[var(--apple-gray-900)] dark:text-white mb-4">Adrian Diaz</div>
        <p class="text-sm leading-relaxed mb-6 text-[var(--apple-gray-500)] dark:text-[var(--apple-gray-400)]">
          Exploring the universe through astronomy, code, and visual storytelling.
        </p>
        <div class="flex space-x-4">
          <a href="https://github.com/adrianciencia" class="text-[var(--apple-gray-500)] hover:text-[var(--apple-blue)] transition-colors" aria-label="GitHub">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
          </a>
          <a href="https://twitter.com/adrianciencia" class="text-[var(--apple-gray-500)] hover:text-[var(--apple-blue)] transition-colors" aria-label="Twitter">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" viewBox="0 0 24 24">
              <path d="M24 4.557c-.883.392-1.832.656-2.828.775 1.017-.609 1.798-1.574 2.165-2.724-.951.564-2.005.974-3.127 1.195-.897-.957-2.178-1.555-3.594-1.555-3.179 0-5.515 2.966-4.797 6.045-4.091-.205-7.719-2.165-10.148-5.144-1.29 2.213-.669 5.108 1.523 6.574-.806-.026-1.566-.247-2.229-.616-.054 2.281 1.581 4.415 3.949 4.89-.693.188-1.452.232-2.224.084.626 1.956 2.444 3.379 4.6 3.419-2.07 1.623-4.678 2.348-7.29 2.04 2.179 1.397 4.768 2.212 7.548 2.212 9.142 0 14.307-7.721 13.995-14.646.962-.695 1.797-1.562 2.457-2.549z"/>
            </svg>
          </a>
        </div>
      </div>
      
      <!-- Footer navigation -->
      {footerLinks.map(section => (
        <div>
          <h3 class="font-medium text-sm text-[var(--apple-gray-900)] dark:text-white mb-5">{section.heading}</h3>
          <ul class="space-y-3">
            {section.links.map(link => (
              <li>
                <a 
                  href={link.url} 
                  class="text-sm hover:text-[var(--apple-blue)] transition-colors"
                >
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
    
    <!-- Bottom section with copyright -->
    <div class="border-t border-gray-100 dark:border-gray-900 pt-8 flex flex-col md:flex-row justify-between items-center">
      <p class="text-xs mb-4 md:mb-0 text-[var(--apple-gray-500)] dark:text-[var(--apple-gray-500)]">
        Â© {currentYear} Adrian Diaz Espinoza. All rights reserved.
      </p>
      
      <!-- Legal links -->
      <div class="flex space-x-6">
        <a href="/privacy" class="text-xs hover:text-[var(--apple-blue)] transition-colors">Privacy Policy</a>
        <a href="/terms" class="text-xs hover:text-[var(--apple-blue)] transition-colors">Terms of Use</a>
      </div>
    </div>
  </div>
</footer>
