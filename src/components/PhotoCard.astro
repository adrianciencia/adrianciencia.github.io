---
import { formatCategory } from '../data/photos';

/** @type {import('../data/photos').Photo} */
const { photo } = Astro.props;
---

<a href={`/photography/${photo.slug}`} class="group block relative overflow-hidden rounded-xl aspect-square">
  <img 
    src={photo.src} 
    alt={photo.alt} 
    class="w-full h-full object-cover"
  />
  <div class="absolute inset-0 bg-gradient-to-t from-black/0 via-black/0 to-transparent flex flex-col justify-end p-4">
    <h3 class="text-white font-medium opacity-0 group-hover:opacity-100 transition-opacity duration-300">{photo.caption}</h3>
    <p class="text-white/80 text-sm opacity-0 group-hover:opacity-100 transition-opacity duration-300">{formatCategory(photo.category)}</p>
  </div>
</a>