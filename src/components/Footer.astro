---
const currentYear = new Date().getFullYear();

// Footer navigation links
const footerLinks = [
  { heading: 'About', links: [
    { label: 'About Me', url: '/about' },
    { label: 'Research', url: '/research' },
    { label: 'Projects', url: '/projects' }
  ]},
  { heading: 'Connect', links: [
    { label: 'Contact', url: '/contact' },
    { label: 'GitHub', url: 'https://github.com/adrianciencia' },
    { label: 'Twitter', url: 'https://twitter.com/adrianciencia' }
  ]},
  { heading: 'Resources', links: [
    { label: 'Blog', url: '/blog' },
    { label: 'Publications', url: '/research' }
  ]}
];
---

<footer class="border-t border-gray-200 dark:border-gray-800 mt-12 pt-12 pb-8 text-[var(--apple-gray-500)] dark:text-[var(--apple-gray-400)]">
  <div class="max-w-7xl mx-auto px-4 md:px-6">
    <!-- Footer grid -->
    <div class="grid grid-cols-2 md:grid-cols-4 gap-8 mb-12">
      <!-- Logo and tagline -->
      <div class="col-span-2 md:col-span-1">
        <div class="font-semibold text-xl tracking-tight text-[var(--apple-gray-800)] dark:text-white mb-3">MySite</div>
        <p class="text-sm leading-relaxed mb-4">Exploring the universe through astronomy, code, and research.</p>
      </div>
      
      <!-- Footer navigation -->
      {footerLinks.map(section => (
        <div>
          <h3 class="font-semibold text-sm text-[var(--apple-gray-800)] dark:text-white mb-4">{section.heading}</h3>
          <ul class="space-y-3">
            {section.links.map(link => (
              <li>
                <a 
                  href={link.url} 
                  class="text-sm hover:text-[var(--apple-blue)] transition-colors"
                >
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
    
    <!-- Bottom section with copyright -->
    <div class="border-t border-gray-200 dark:border-gray-800 pt-8 flex flex-col md:flex-row justify-between items-center">
      <p class="text-xs mb-4 md:mb-0">
        Â© {currentYear} Adrian Diaz Espinoza. All rights reserved.
      </p>
      
      <!-- Legal links -->
      <div class="flex space-x-6">
        <a href="/privacy" class="text-xs hover:text-[var(--apple-blue)] transition-colors">Privacy Policy</a>
        <a href="/terms" class="text-xs hover:text-[var(--apple-blue)] transition-colors">Terms of Use</a>
      </div>
    </div>
  </div>
</footer>
