---
interface CardProps {
  title: string;
  description: string;
  link?: string;
  image?: string;
}

const { title, description, link, image } = Astro.props as CardProps;
---

<article class="rounded-lg border shadow-sm overflow-hidden bg-white">
  {image && (
    <img src={image} alt={title} class="w-full h-48 object-cover" />
  )}
  <div class="p-4">
    <h3 class="text-lg font-semibold mb-2">{title}</h3>
    <p class="text-sm text-gray-600 mb-4">{description}</p>
    {link && (
      <a 
        href={link} 
        class="inline-block px-3 py-1 text-white bg-blue-500 rounded hover:bg-blue-600"
      >
        Learn More
      </a>
    )}
  </div>
</article>