---
interface ImageItem {
  src: string;
  alt: string;
}

const images: ImageItem[] = [
  { src: '/assets/images/photo1.jpg', alt: 'Photo 1' },
  { src: '/assets/images/photo2.jpg', alt: 'Photo 2' },
  { src: '/assets/images/photo3.jpg', alt: 'Photo 3' },
];
---

<section class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4 p-4">
  {images.map((img) => (
    <div class="w-full h-64 bg-gray-200 overflow-hidden">
      <img 
        src={img.src} 
        alt={img.alt} 
        class="object-cover w-full h-full transition-transform duration-300 hover:scale-105" 
      />
    </div>
  ))}
</section>