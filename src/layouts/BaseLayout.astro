---
// Add a simple console log to check if the layout is being processed
console.log("BaseLayout is being processed");

import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import ScrollToTop from '../components/ScrollToTop.svelte';
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>My Astro Site</title>
    <meta name="description" content="A personal site about astronomy, projects, and more." />
    <meta property="og:title" content="My Astro Site" />
    <meta property="og:description" content="A personal site about astronomy, projects, and more." />
    <meta property="og:image" content="/assets/images/og-image.png" />
    <!-- ... -->
    <slot name="head"></slot>
  </head>
  <body class="bg-white text-gray-800 dark:bg-gray-900 dark:text-gray-200 transition-colors">
    <Header />
    <main class="min-h-screen">
      <!-- Debug element inside the body -->
      <div id="debug" style="position: fixed; bottom: 5px; right: 5px; background: red; color: white; padding: 5px; z-index: 9999; font-size: 12px;">
        Debug: Site is loading
      </div>
      
      <slot /> <!-- This is where page content will be inserted -->
    </main>
    <Footer />
    <ScrollToTop client:load />
  </body>
</html>
